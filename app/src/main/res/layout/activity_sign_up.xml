<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".views.SignUpActivity">

    <ImageView
        android:foreground="#211D2238"
        android:foregroundTintMode="src_atop"
        android:id="@+id/imvBackground"
        android:src="@drawable/signup_brackground"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="600dp"/>

    <ScrollView
        android:layout_gravity="bottom"
        android:background="@drawable/signup_transparent_gradient"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen500dp">

        <LinearLayout
            android:paddingLeft="@dimen/dimen20dp"
            android:paddingRight="@dimen/dimen20dp"
            android:layout_marginBottom="@dimen/dimen50dp"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginBottom="@dimen/dimen30dp"
                android:fontFamily="@font/lato_regular"
                android:textSize="@dimen/dimen20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Letâ€™s get you started!"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="@dimen/dimen140dp">

                <TextView
                    android:id="@+id/tvTitleEmail"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="@dimen/dimen10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#86868E"
                    android:text="Your email"/>

                <EditText
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:backgroundTint="@color/blue"
                    android:fontFamily="@font/lato_regular"
                    android:hint="@string/email_hint"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/white"
                    android:textColorHint="#86868E"
                    android:textSize="@dimen/dimen14sp" />

                <TextView
                    android:id="@+id/tvTitlePassword"
                    android:layout_marginTop="@dimen/dimen15dp"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="@dimen/dimen10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#86868E"
                    android:text="Your password"/>

                <FrameLayout
                    android:layout_marginTop="@dimen/dimen6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edtPass"
                        android:paddingLeft="@dimen/dimen3dp"
                        android:textColorHint="#86868E"
                        android:hint="@string/pass_hint"
                        android:textColor="@color/white"
                        android:paddingTop="@dimen/dimen6dp"
                        android:paddingBottom="@dimen/dimen6dp"
                        android:background="@null"
                        android:textSize="@dimen/dimen14sp"
                        android:inputType="textPassword"
                        android:paddingRight="@dimen/dimen18dp"
                        android:fontFamily="@font/lato_regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <ToggleButton
                        android:layout_marginRight="@dimen/dimen3dp"
                        android:layout_gravity="right|center_vertical"
                        android:background="@drawable/hide_show_pass"
                        android:textOn=""
                        android:textOff=""
                        android:id="@+id/toggleHideShowPass"
                        android:layout_width="18dp"
                        android:layout_height="18dp"/>
                </FrameLayout>

                <ProgressBar
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"
                    android:progress="100"
                    android:id="@+id/progressBarCheckPass"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <TextView
                    android:id="@+id/tvCheckLevel"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:layout_gravity="right"
                    android:textSize="@dimen/dimen10sp"
                    android:textColor="#86868E"
                    android:text="Too short"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"/>

            </LinearLayout>



            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dimen25dp"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <CheckBox
                    android:button="@null"
                    android:checked="true"
                    android:background="@drawable/checkbox_age"
                    android:layout_width="19dp"
                    android:layout_height="18dp"/>

                <TextView
                    android:layout_marginLeft="@dimen/dimen5dp"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="@dimen/dimen10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="I am over 16 years of age"/>

            </LinearLayout>

            <TextView
                android:layout_marginTop="@dimen/dimen25dp"
                android:textSize="@dimen/dimen10sp"
                android:textColor="#86868E"
                android:fontFamily="@font/lato_regular"
                android:text="By clicking Sign Up, you are indicating that you have read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/dimen10sp"
                    android:textColor="#86868E"
                    android:fontFamily="@font/lato_regular"
                    android:text="and agree to the "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textSize="@dimen/dimen10sp"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/lato_regular"
                    android:text="Terms of Service "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textSize="@dimen/dimen10sp"
                    android:textColor="#86868E"
                    android:fontFamily="@font/lato_regular"
                    android:text="and "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textSize="@dimen/dimen10sp"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/lato_regular"
                    android:text="Privacy Policy "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/dimen40dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/pbLoading"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="@dimen/dimen13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Sign Up"/>

                <FrameLayout
                    android:id="@+id/btnNext"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/border_button_next"
                    android:layout_width="40dp"
                    android:layout_height="40dp">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_right"/>

                </FrameLayout>

            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rlNotify"
                android:layout_marginTop="@dimen/dimen10dp"
                android:padding="@dimen/dimen10dp"
                android:background="@drawable/notify_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="@dimen/dimen11sp"
                    android:fontFamily="@font/lato_regular"
                    android:text="Warning message !"
                    android:id="@+id/tvMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textSize="@dimen/dimen11sp"
                    android:id="@+id/tvOK"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato_regular"
                    android:text="OK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>



        </LinearLayout>

    </ScrollView>

    <ImageView
        android:layout_marginLeft="@dimen/dimen20dp"
        android:layout_marginTop="@dimen/dimen50dp"
        android:src="@drawable/ic_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</FrameLayout>